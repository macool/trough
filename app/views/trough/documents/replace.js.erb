<% if @document.errors.empty? %>
  DocumentReplaceModal.hide();
  location.reload();
<% else %>
  <% if @duplicate_document.present? %>
    documentHelpers.showDuplicateDocumentAlert("<%= @duplicate_document.slug %>", function(slug){
      DocumentReplaceModal.hide();
      DocumentInfoModal.show(slug);
    }, "Show", $("form#replace_document"));
  <% elsif @document.errors[:file_content_type].present? %>
    DocumentReplaceModal.showContentTypeWarning();
  <% end %>
<% end %>
